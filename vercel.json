{
    "rewrites": [
        {
            "source": "/:path(.*)",
            "has": [
                {
                    "type": "filesystem",
                    "negate": true
                }
            ],
            "destination": "/views/:path.html"
        },
        {
            "source": "/:path(.*)",
            "has": [
                {
                    "type": "filesystem",
                    "negate": true
                }
            ],
            "destination": "/:path.php"
        }
    ]
}